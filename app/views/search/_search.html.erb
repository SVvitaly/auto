<%= form_tag search_items_path, :method => :get do %>
    <%= text_field_tag :item_name, params[:item_name] %>
    <%= text_field_tag :keywords, params[:keywords] %>

    <%= submit_tag "Search!" %>
<% end %>

<%= form_tag(search_items_path, method: "get") do %>
    <p>
      <%= label_tag(:item_name, "Номер документа:") %>
      <%= search_field_tag (:item_name) %>
      <%= label_tag(:keywords, "Наименование:") %>
      <%= search_field_tag (:keywords) %>
    </p>
    <hr>
    <%= submit_tag("Поиск")  %>
<% end %>